
    @model EmployeeVM
    <label asp-for="Name"> Name</label>
    <input type="text" asp-for="Name" placeholder="Name" class=" px-2 form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label asp-for="Salary" > Salary</label>
    <input type="text" asp-for="Salary"placeholder="Salary" class=" px-2 form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
    <br />
    <label  asp-for="HireDate" > Hire Date</label>
    <input asp-for="HireDate" id="datepicker" placeholder="Hire Date"  class=" px-2 form-control" type="text" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
    <br />
    <label  asp-for="Email" > Email</label>
    <input type="email"  asp-for="Email" placeholder="Email" class=" px-2 form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />
    <label  asp-for="Notes" > Notes</label>
    <textarea type="text" rows="4"  asp-for="Notes" placeholder="Notes" class=" px-2 form-control" ></textarea>
    <span asp-validation-for="Notes" class="text-danger"></span>
    <br />
    <label  asp-for="Address" > Address</label>
    <input type="text"  asp-for="Address" placeholder="address" class=" px-2 form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
    <br />
       
    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" checked="">
        <label asp-for="IsActive">IsActive</label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <br />
    <select asp-for="DepatmentId" asp-items="(SelectList)ViewBag.DepartmentList">
        <option> choose Department</option>
    </select>
    <br />
    <span asp-validation-for="DepatmentId" class="text-danger"></span>