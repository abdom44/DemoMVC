
@{
    ViewData["Title"] = "Department";
}
@model IEnumerable<DepartmentVM>
@section bootstrapSelect {
    <link rel="stylesheet" href="~/plugins/bootstrap-select/css/bootstrap-select.min.css"/>
}


<style>
    th{
        text-align:center;
    }
</style>
<br />
<br />

<div class="block-header">
    <h2>Department</h2>
</div>
<a asp-action="create" class="btn btn-success" asp-controller="department">Create new Department</a>
<br />
<br />
<table class=" table table-hover table-striped table-bordered text-center ">
    <thead>
        <th>ID </th>
        <th>Name</th>
        <th>Code</th>
        <th>Deatails</th>
        <th>Update</th>
        <th>Delete</th>
    </thead>
    <tbody>
          @foreach (var item in Model)
            {   
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Code
                    </td>
                    <td>
                        <a asp-action="details"  asp-controller="department" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    </td> 
                    <td>
                        <a asp-action="update"  asp-controller="department" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    </td>
                    <td>
                        <a asp-action="delete"  asp-controller="department" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            }
    </tbody>
</table>