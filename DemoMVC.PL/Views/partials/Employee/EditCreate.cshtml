@inject DemoMVC.BL.Intenfaces.ICountry County

    @model EmployeeVM
    <label asp-for="Name"> @SharedLocalizer["Name"]</label>
    <input type="text" asp-for="Name" placeholder="@SharedLocalizer["Name"]" class=" px-2 form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label asp-for="Salary" > @SharedLocalizer["Salary"]</label>
    <input type="text" asp-for="Salary"placeholder="@SharedLocalizer["Salary"]" class=" px-2 form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
    <br />
    <label  asp-for="HireDate" > @SharedLocalizer["Hire Date"]</label>
    <input asp-for="HireDate" id="datepicker" placeholder="@SharedLocalizer["Hire Date"]"  class=" px-2 form-control" type="text" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
    <br />
    <label  asp-for="Email" > @SharedLocalizer["Email"]</label>
    <input type="email"  asp-for="Email" placeholder="@SharedLocalizer["Email"]" class=" px-2 form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />
    <label  asp-for="Notes" > @SharedLocalizer["Notes"]</label>
    <textarea type="text" rows="4"  asp-for="Notes" placeholder="@SharedLocalizer["Notes"]" class=" px-2 form-control" ></textarea>
    <span asp-validation-for="Notes" class="text-danger"></span>
    <br />
    <label  asp-for="Address" > @SharedLocalizer["Address"]</label>
    <input type="text"  asp-for="Address" placeholder="@SharedLocalizer["Address"]" class=" px-2 form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
    <br />
       
    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" checked="">
        <label asp-for="IsActive">IsActive</label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <br />
    <select asp-for="DepatmentId" asp-items="(SelectList)ViewBag.DepartmentList">
        <option> choose Department</option>
    </select>
    <br />
    <span asp-validation-for="DepatmentId" class="text-danger"></span>


    <br />
    <label for="CountryList"> Country</label>
    <select id="CountyList" name="CountyList">
        <option> choose Country</option>
    @foreach(var item in await County.GetAsync() )
    {
        <option value="@item.Id" > @item.Name</option>
        
    }   
    </select>
    <br />
    <br />
    <label>City</label>
    <select  id="CityList">
     <option >Choose City</option>    
    </select>

        
    <br /> <br />
     <label asp-for="DistrictId">District</label>
    <select asp-for="DistrictId">
     <option>Choose District</option>    
    </select>

        <br /> <br />

   <div class="input-group">   
        <label  asp-for="CV" class="custom-file-label" > CV</label>
        <input type="file"  asp-for="CV" placeholder="CV" class="custom-file-input px-2 form-control"/>
        <span asp-validation-for="CV" class="text-danger"></span>
   </div>
